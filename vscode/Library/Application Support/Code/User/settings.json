{
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "github.gitProtocol": "ssh",
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "workbench.startupEditor": "none",
  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "window.zoomLevel": 1,
  "editor.tabSize": 2,
  //
  // formatters
  //
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[go]": {
    "editor.codeActionsOnSave": {
    }
  },
  //
  // devcontainers
  //
  "dev.containers.defaultExtensions": [
    "extr0py.vscode-relative-line-numbers",
    "eamodio.gitlens",
    "esbenp.prettier-vscode"
  ],
  // use an absolute path here
  "dotfiles.installCommand": "~/dotfiles/install",
  // use https to avoid git/ssh/known host shenanigans
  "dotfiles.repository": "https://github.com/noizwaves/dotfiles.git",
  //
  // gitlens
  //
  // disable aggressive inline history prompts
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "redhat.telemetry.enabled": false,
  "[python]": {
    "editor.formatOnType": true
  },
  "workbench.colorTheme": "Default Dark+",
  "go.lintOnSave": "off",
}
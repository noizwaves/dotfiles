{
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "github.gitProtocol": "ssh",
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "workbench.startupEditor": "none",
  "editor.fontSize": 14,
  "terminal.integrated.fontSize": 14,
  "editor.tabSize": 2,
  //
  // formatters
  //
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {}
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  //
  // devcontainers
  //
  "dev.containers.defaultExtensions": [
    "extr0py.vscode-relative-line-numbers",
    "eamodio.gitlens",
    "esbenp.prettier-vscode"
  ],
  // use an absolute path here
  "dotfiles.installCommand": "install",
  // use https to avoid git/ssh/known host shenanigans
  "dotfiles.repository": "https://github.com/noizwaves/dotfiles.git",
  //
  // gitlens
  //
  // disable aggressive inline history prompts
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "redhat.telemetry.enabled": false,
  "[python]": {
    "editor.formatOnType": true
  },
  "workbench.colorTheme": "Default Dark+",
  "terminal.integrated.minimumContrastRatio": 1,
  // Go settings
  "go.lintOnSave": "workspace",
  "go.lintTool": "golangci-lint-v2",
  "go.toolsManagement.autoUpdate": true,
  "gopls": {
    "ui.navigation.symbolScope": "workspace",
    // More precise syntax highlighting
    "ui.semanticTokens": true
  },
  "explorer.confirmDragAndDrop": false,
  "dev.containers.copyGitConfig": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.insertFinalNewline": true,
  "remote.tunnels.access.preventSleep": true,
  "remote.SSH.maxReconnectionAttempts": 0,
  "remote.SSH.enableDynamicForwarding": false,
  "files.associations": {
    "*.yml.example": "yaml"
  },
  "fuzzyRubyServer.indexGems": false,
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [
      120
    ],
    "editor.semanticHighlighting.enabled": true
  },
  "rubyLsp.rubyVersionManager": {
    "identifier": "mise",
  },
  // templ
  "[templ]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "a-h.templ"
  },
  // vim
  "vim.useCtrlKeys": false, // prevent stealing C-p and C-f in linux
  "window.zoomLevel": 1,
  // Rust Analyzer
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.renderColons": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.lens.enable": false,
  // Copilot
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "update.showReleaseNotes": false,
  "cursor.composer.shouldAllowCustomModes": true,
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
}
